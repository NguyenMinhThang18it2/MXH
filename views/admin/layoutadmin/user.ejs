<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1>Projects <span class="table-project-n">Data users</span> Table</h1>
                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <div id="toolbar">
                                <select class="form-control">
                                    <option value="">Export Basic</option>
                                    <option value="all">Export All</option>
                                    <option value="selected">Export Selected</option>
                                </select>
                            </div>
                            <style>table thead tr th {text-align: center;}</style>
                            <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="false" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th  data-checkbox="true"></th>
                                        <th >UserName</th>
                                        <th d>Email</th>
                                        <th >Avata</th>
                                        <th >Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   <% 
                                        
                                        useraa.forEach(function(users){
                                        if(users.username !== user.username){  %>
                                    <tr>  
                                        <!-- <input type="hidden" id="iduser" value="<%= user._id %>"> -->
                                        <td></td>
                                        <td data-username="<%= users.username %>"><%= users.username %></td>
                                        <td data-email="<%= users.email %>"><%= users.email %></td>
                                        <td  data-password="<%= users.password %>">
                                            <img src="../../../uploads/<%= users.avata %>" width="60px" alt="">
                                        </td>
                                        <td class="datatable-ct" data-iduser="<%= users._id %>">
                                            <a class="btn btn-danger" href="/admin/tableuser/delete/<%= users._id %>"><i class="far fa-trash-alt"></i></a>
                                            <button type="button" class="btn btn-warning" id="editbutton" data-toggle="modal" data-target="#exampleModaltrue">
                                                <i class="far fa-edit"></i>
                                            </button>
                                            <!-- follow -->
                                            <a class="btn btn-success" onclick="followUser('<%= users._id %>')"><i class="far fa-grin-hearts"></i></i> F</a>
                                            <a class="btn btn-danger" href="/admin/unfollow/<%= users._id %>"><i class="far fa-grin-hearts"></i></i> UF</a>
                                            <!-- addfriend -->
                                            <a class="btn btn-info" onclick="addfriend('<%= users._id %>')"><i class="fas fa-user-plus"></i> A</a>
                                            <a class="btn btn-danger" href="/admin/deletefriend/<%= users._id %>"><i class="fas fa-user-plus"></i> DA</a>
                                        </td>
                                    </tr>
                                    <% }}) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- place the scripts at the end of the html page -->
<script>
    $('table').on('click', '#editbutton', function () {
        
        var $tr = $(this).closest('tr');
        var iduser = $tr.find('td[data-iduser]').data('iduser');
        var username = $tr.find('td[data-username]').data('username');
        var email = $tr.find('td[data-email]').data('email');
        
        
        $('h5.modal-title').html('Edit Admin Data: '+username);
        $('#editname').val(username);
        $('#editemail').val(email);
        
        $("form#formEdit").attr('action', window.location.href+'/update/'+iduser);
    });
    function followUser(id){
        let iduser = document.getElementById('idthisuserlogin').innerHTML;
        socket.emit('followUser', {
            iduserLogin: iduser,
            FollowUser: id
        });
    }
    function addfriend(idaddfriend){
        let iduser = document.getElementById('idthisuserlogin').innerHTML;
        socket.emit('add notication friend', {
            iduserLogin: iduser,
            friend: idaddfriend
        });
    }
    function replyfriend(idreplyfriend){
        alert(idreplyfriend);
        let iduser = document.getElementById('idthisuserlogin').innerHTML;
        socket.emit('add new friend', {
            iduserLogin: iduser,
            replyfriend: idreplyfriend
        });
    }
</script>

